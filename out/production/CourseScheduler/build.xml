<?xml version="1.0" encoding="UTF-8"?>
<project name="CourseScheduler" default="jar" basedir=".">
    <description>Build file for CourseScheduler</description>
    
    <!-- Set properties -->
    <property name="src.dir" location="src"/>
    <property name="build.dir" location="bin"/>
    <property name="lib.dir" location="lib"/>
    <property name="dist.dir" location="dist"/>
    <property name="jar.name" value="CourseScheduler.jar"/>
    
    <!-- Define classpath for compilation -->
    <path id="classpath">
        <fileset dir="${lib.dir}" includes="**/*.jar"/>
    </path>
    
    <!-- Initialize -->
    <target name="init">
        <mkdir dir="${build.dir}"/>
        <mkdir dir="${dist.dir}"/>
    </target>
    
    <!-- Compile the Java code -->
    <target name="compile" depends="init" description="Compile the source">
        <javac srcdir="${src.dir}" destdir="${build.dir}" classpathref="classpath" includeantruntime="false" debug="true" source="1.8" target="1.8">
            <compilerarg value="-Xlint:deprecation"/>
        </javac>
        <!-- Copy any non-Java files -->
        <copy todir="${build.dir}">
            <fileset dir="${src.dir}" excludes="**/*.java"/>
        </copy>
    </target>
    
    <!-- Create the JAR file -->
    <target name="jar" depends="compile" description="Build the JAR file">
        <jar destfile="${dist.dir}/${jar.name}" basedir="${build.dir}">
            <manifest>
                <attribute name="Main-Class" value="MainFrame"/>
                <attribute name="Class-Path" value="lib/derby.jar"/>
            </manifest>
        </jar>
        <!-- Copy lib directory for distribution -->
        <copy todir="${dist.dir}/lib">
            <fileset dir="${lib.dir}"/>
        </copy>
        <!-- Copy config file -->
        <copy file="scheduler_config.txt" todir="${dist.dir}" failonerror="false"/>
    </target>
    
    <!-- Clean up -->
    <target name="clean" description="Clean up">
        <delete dir="${build.dir}"/>
        <delete dir="${dist.dir}"/>
    </target>
    
    <!-- Run the application -->
    <target name="run" depends="jar" description="Run the application">
        <java jar="${dist.dir}/${jar.name}" fork="true"/>
    </target>
</project>